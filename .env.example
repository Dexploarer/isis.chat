# ===================================================================
# ISIS Chat Environment Variables Example
# Copy this file to .env.local and fill in your values
# ===================================================================

# Convex Configuration
CONVEX_DEPLOYMENT=
CONVEX_URL=

# Solana Payment Configuration
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_SOLANA_RPC_HOST=https://api.devnet.solana.com
NEXT_PUBLIC_SOLANA_PAYMENT_ADDRESS=your_wallet_address_here
NEXT_PUBLIC_CONVEX_URL=

# Subscription Pricing (in SOL and USD)
NEXT_PUBLIC_SUBSCRIPTION_PRO_PRICE_SOL=0.05
NEXT_PUBLIC_SUBSCRIPTION_PRO_PLUS_PRICE_SOL=0.1
NEXT_PUBLIC_SUBSCRIPTION_PRO_PRICE_USD=12
NEXT_PUBLIC_SUBSCRIPTION_PRO_PLUS_PRICE_USD=25

# Convex Backend Solana Config
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_PAYMENT_ADDRESS=your_wallet_address_here
SOLANA_COMMITMENT_LEVEL=confirmed

# Subscription Limits
SUBSCRIPTION_FREE_MESSAGE_LIMIT=100
SUBSCRIPTION_PRO_MESSAGE_LIMIT=1500
SUBSCRIPTION_PRO_PLUS_MESSAGE_LIMIT=3000
SUBSCRIPTION_PRO_PREMIUM_LIMIT=100
SUBSCRIPTION_PRO_PLUS_PREMIUM_LIMIT=300

# ===================================================================
# MCP (Model Context Protocol) Server Configuration
# ===================================================================

# Context7 MCP Server
# Provides access to library documentation, code examples, and best practices
CONTEXT7_MCP_URL=https://mcp.context7.com/mcp
# Optional: Add your Context7 API key for higher rate limits
# CONTEXT7_API_KEY=your_context7_api_key_here

# File System MCP Server
# Comma-separated list of paths the filesystem MCP server can access
MCP_ALLOWED_PATHS=/tmp,/home/user/documents

# Brave Search MCP Server
# Get your API key from https://api.search.brave.com/
# BRAVE_API_KEY=your_brave_api_key_here

# ===================================================================
# AI Provider Configuration (Optional)
# ===================================================================

# OpenAI API Configuration
# OPENAI_API_KEY=sk-...
# OPENAI_ORG_ID=org-...

# Anthropic Claude API
# ANTHROPIC_API_KEY=sk-ant-...

# Google AI (Gemini)
